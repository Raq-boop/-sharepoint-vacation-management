{
  "listDefinition": {
    "title": "Pedidos de Férias",
    "description": "Sistema de gerenciamento de pedidos de férias dos colaboradores",
    "template": "GenericList",
    "enableVersioning": true,
    "enableMinorVersions": false,
    "enableAttachments": false,
    "enableFolderCreation": false,
    "fields": [
      {
        "displayName": "Colaborador",
        "internalName": "Colaborador", 
        "type": "User",
        "required": true,
        "addToDefaultView": true,
        "description": "Colaborador que está solicitando as férias"
      },
      {
        "displayName": "Data Início",
        "internalName": "DataInicio",
        "type": "DateTime", 
        "required": true,
        "addToDefaultView": true,
        "dateOnly": true,
        "description": "Data de início das férias"
      },
      {
        "displayName": "Data Fim",
        "internalName": "DataFim",
        "type": "DateTime",
        "required": true, 
        "addToDefaultView": true,
        "dateOnly": true,
        "description": "Data de fim das férias"
      },
      {
        "displayName": "Dias Total",
        "internalName": "DiasTotal",
        "type": "Number",
        "required": true,
        "addToDefaultView": true,
        "min": 1,
        "max": 365,
        "decimals": 0,
        "description": "Número total de dias de férias"
      },
      {
        "displayName": "Motivo", 
        "internalName": "Motivo",
        "type": "Note",
        "required": false,
        "addToDefaultView": true,
        "richText": false,
        "numberOfLines": 3,
        "description": "Motivo/observações sobre o pedido de férias"
      },
      {
        "displayName": "Estado",
        "internalName": "Estado", 
        "type": "Choice",
        "required": true,
        "addToDefaultView": true,
        "choices": ["Pendente", "Aprovado", "Rejeitado", "Cancelado"],
        "defaultValue": "Pendente",
        "format": "Dropdown",
        "description": "Status atual do pedido"
      },
      {
        "displayName": "Data Solicitação",
        "internalName": "DataSolicitacao",
        "type": "DateTime",
        "required": true,
        "addToDefaultView": true,  
        "dateOnly": false,
        "description": "Data e hora em que o pedido foi solicitado"
      },
      {
        "displayName": "Aprovado Por",
        "internalName": "AprovadoPor",
        "type": "User", 
        "required": false,
        "addToDefaultView": false,
        "description": "Pessoa que aprovou ou rejeitou o pedido"
      },
      {
        "displayName": "Data Aprovação", 
        "internalName": "DataAprovacao",
        "type": "DateTime",
        "required": false,
        "addToDefaultView": false,
        "dateOnly": false,
        "description": "Data e hora da aprovação/rejeição"
      },
      {
        "displayName": "Observações",
        "internalName": "Observacoes",
        "type": "Note",
        "required": false,
        "addToDefaultView": false,
        "richText": false, 
        "numberOfLines": 3,
        "description": "Observações do aprovador sobre o pedido"
      }
    ],
    "views": [
      {
        "title": "Todos os Pedidos",
        "isDefault": true,
        "fields": ["Title", "Colaborador", "DataInicio", "DataFim", "DiasTotal", "Estado", "DataSolicitacao"],
        "query": "<OrderBy><FieldRef Name='DataSolicitacao' Ascending='FALSE'/></OrderBy>"
      },
      {
        "title": "Pedidos Pendentes", 
        "fields": ["Title", "Colaborador", "DataInicio", "DataFim", "DiasTotal", "DataSolicitacao"],
        "query": "<Where><Eq><FieldRef Name='Estado'/><Value Type='Choice'>Pendente</Value></Eq></Where><OrderBy><FieldRef Name='DataSolicitacao' Ascending='FALSE'/></OrderBy>"
      },
      {
        "title": "Pedidos Aprovados",
        "fields": ["Title", "Colaborador", "DataInicio", "DataFim", "DiasTotal", "AprovadoPor", "DataAprovacao"],
        "query": "<Where><Eq><FieldRef Name='Estado'/><Value Type='Choice'>Aprovado</Value></Eq></Where><OrderBy><FieldRef Name='DataAprovacao' Ascending='FALSE'/></OrderBy>"
      }
    ],
    "permissions": {
      "description": "Configuração de permissões recomendada",
      "suggestions": [
        {
          "group": "Colaboradores",
          "permissions": ["Contribute"],
          "description": "Podem criar e editar seus próprios pedidos"
        },
        {
          "group": "Gestores/RH", 
          "permissions": ["Full Control"],
          "description": "Podem aprovar, rejeitar e gerenciar todos os pedidos"
        },
        {
          "group": "Todos",
          "permissions": ["Read"],
          "description": "Podem visualizar pedidos (opcional, conforme política da empresa)"
        }
      ]
    },
